<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.googlecode.munki.managedsoftwareupdate-loginwindow</string>
  <key>LimitLoadToSessionType</key>
  <array>
    <string>LoginWindow</string>
  </array>
  <key>ProgramArguments</key>
  <array>
    <string>/Library/Application Support/munki/bin/supervisor</string>
    <string>--timeout</string>
    <string>43200</string>
    <string>--</string>
    <string>/Library/Application Support/munki/bin/managedsoftwareupdate</string>
    <string>--logoutinstall</string>
  </array>
  <key>RunAtLoad</key>
  <false/>
  <key>KeepAlive</key>
  <dict>
     <key>PathState</key>
     <dict>
       <key>/private/tmp/com.googlecode.munki.installatlogout</key>
       <true/>
       <key>/Users/Shared/.com.googlecode.munki.checkandinstallatstartup</key>
       <true/>
       <key>/Users/Shared/.com.googlecode.munki.installatstartup</key>
       <true/>
     </dict>
  </dict>
</dict>
</plist>

